  const startDate = document.getElementById(startId).value;
  const duration = parseInt(document.getElementById(durationId).value);

  if (startDate && duration) {
    const start = new Date(startDate);
    start.setDate(start.getDate() + duration);

    const dd = String(start.getDate()).padStart(2, '0');
    const mm = String(start.getMonth() + 1).padStart(2, '0');
    const yyyy = start.getFullYear();
    const formatted = `${dd}/${mm}/${yyyy}`;

    document.getElementById(endId).value = formatted;
    document.getElementById(displayId).textContent = `(Ends on: ${formatted})`;
  } else {
    document.getElementById(endId).value = "";
    document.getElementById(displayId).textContent = "(Ends on: DD/MM/YYYY)";
  }
}

